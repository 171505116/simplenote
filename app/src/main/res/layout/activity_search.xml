<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:orientation="horizontal">

    <SearchView
        android:id="@+id/input_sv_search"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:queryHint="@string/input_sv_search"
        android:iconifiedByDefault="false"
        android:background="@drawable/border_bottom"

    />

    <Button
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:id="@+id/cancel_btn_search"
            android:layout_height="wrap_content"
            android:text="@string/cancel_btn_search"
            android:layout_gravity="end"
            android:background="@drawable/border_bottom"
            />

    </LinearLayout>

    <include layout="@layout/search_history"/>


    <ListView
        android:id="@+id/content_lis_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>

    <TextView
        android:id="@+id/bottom_search"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        />

   </LinearLayout>